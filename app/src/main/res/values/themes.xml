<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoPhysicsLab" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GeoPhysicsLab.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextInputs" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/round_inputs</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/padding_start_edit_text</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/padding_start_edit_text</item>
    </style>

    <style name="MultilineTextInputs" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/multiline_text_input</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/padding_start_edit_text</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/padding_start_edit_text</item>
    </style>

    <style name="TextViewInputs" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ComboBox" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/round_inputs</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/padding_start_edit_text</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/padding_start_edit_text</item>
        <item name="android:spinnerMode">dropdown</item>
        <!--<item name="android:drawableEnd">R.drawable.</item>-->
    </style>

    <style name="Theme.GeoPhysicsLab.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GeoPhysicsLab.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>