<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_magnitude"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_earthquake_title"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#222222"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_magnitude"
        app:layout_constraintTop_toTopOf="@+id/tv_magnitude" />

    <TextView
        android:id="@+id/tv_earthquake_date_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv_earthquake_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_earthquake_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_earthquake_title" />

    <TextView
        android:id="@+id/tv_earthquake_time"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_earthquake_date_time"
        app:layout_constraintStart_toEndOf="@+id/tv_earthquake_date_time"
        app:layout_constraintTop_toTopOf="@+id/tv_earthquake_date_time" />

</androidx.constraintlayout.widget.ConstraintLayout>